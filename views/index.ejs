<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <main class="container py-5">
    <div class="card shadow-lg">
      <div class="card-header bg-dark text-white text-center">
          <h3 class="my-2">URL Shortener</h3>
      </div>
      <div class="card-body p-4">
          <form action="/urls/encode" method="POST">
              <div class="input-group input-group-lg mb-3">
                  <input type="url" name="longUrl" class="form-control" placeholder="Enter URL here..." required>
                  <button class="btn btn-success" type="submit">Shorten</button>
              </div>
          </form>
          <% if (typeof shortUrl !== 'undefined' && shortUrl) { %>
              <div class="alert alert-success mt-4">
                  <strong>Short URL:</strong>
                  <div class="input-group mt-2">
                      <input type="text" class="form-control" value="<%= shortUrl %>" readonly>
                      <button id="copy-button" class="btn btn-secondary" onclick="copyToClipboard('<%= shortUrl %>')">Copy</button>
                  </div>
              </div>
          <% } %>
          <% if (typeof shortUrlError !== 'undefined' && shortUrlError) { %>
              <div class="alert alert-danger" role="alert">
                  <%= shortUrlError %>
              </div>
          <% } %>
      </div>
    </div>
  </main>
    <script>
        function copyToClipboard(text) {
          navigator.clipboard.writeText(text)
            .then(() => {
                const copyButton = document.getElementById('copy-button');
                if (copyButton) {
                    const originalText = copyButton.textContent;
                    copyButton.textContent = 'Copied!';
                    setTimeout(() => {
                        copyButton.textContent = originalText;
                    }, 2000);
                }
            })
            .catch((err) => {
                console.error('Ehhhhhhh: ', err);
            });
        }
    </script>
  </body>
</html>
